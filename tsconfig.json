{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "jsx": "react",
      "moduleResolution": "node",
      "outDir":"./dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "baseUrl": ".",
      "paths": {
        "react": ["./node_modules/@types/*"]
      },
      "lib": [
        "es6",
        "es7",
        "dom"
      ]
    },
    "exclude": [ "dist", "node_modules" ],
    "include": [ "src/**/*", "*/" ]
  }
